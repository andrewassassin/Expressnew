<!DOCTYPE html>
<html>
  <head>
    <% include head %>
  </head>
  <body>
    <% include navbar %>
    <header id="indexHeader" class="jumbotron header">
      <div class="container">
        <h1>Home Page <%productList %></h1>
        <p>Lorem ipsum dolor sit amet.</p>
      </div>
    </header>
    <section class="py-3">
    <div class="container">
    <div class="row">
      <% productList.forEach(product => {  %>
        <div class="col-md-6 ">
          <div class="card mb-3">
        <img class="card-img-top" src="<%= product.image %>" alt="">
        <div class="card-body">
          <h4 class="card-title"><%= product.name %>></h4>
          <h4>
            <span class="badge badge-info">
              <%= product.category %>
            </span>
          </h4>
          <p class="card-text"> $ <%= product.price %> NTD</p>
          <button><a href="produc/edit/<%= product.id %>">編輯</a></button>
          <button class="delete-btn" data-id="<%=product.id%>" type="button" class="btn btn-danger"><i class="fas fa-trash"></i>
            刪除商品</button>
        </div>
      </div>
    </div>
      <% }) %>;
    </div>
</div>
</section>
    <% include scripts %>



  </body>
</html>